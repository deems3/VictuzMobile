<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VictuzMobile.App.Views.ActivityDetailsView"
             Title=" ">
    
    <VerticalStackLayout>
        <Label x:Name="ActivityTitleLabel" Text="{Binding Activity.Name}"/>
        <Image x:Name="ActivityImage" />
        <Label x:Name="ActivityNameLabel" />
        <Label x:Name="ActivityDescriptionLabel" />
        <Label x:Name="ActivityOrganiserLabel" />
        <Label x:Name="ActivityLocationLabel" />
        <Label x:Name="ActivityMaxRegistrations" />

        <Button x:Name="ManageActivityBtn" Text="Beheren" />
        <Button x:Name="RegisterForActivityBtn" Text="Inschrijven" />
    </VerticalStackLayout>
</ContentPage>