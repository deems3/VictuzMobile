<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VictuzMobile.App.Views.SettingsView"
             Title="SettingsView">

    <VerticalStackLayout Spacing="15" Padding="15">
        <Grid
            ColumnDefinitions="*, auto"
            RowDefinitions="*,*,*,*"
            RowSpacing="20"
            ColumnSpacing="20">

            <!-- Dark Mode -->
            <Border
                Grid.ColumnSpan="2"
                Grid.Row="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Grid ColumnDefinitions="*, auto">
                    <Label
                        Text="Donkere modus"
                        FontSize="18"
                        VerticalTextAlignment="Center"/>
                    <Switch
                        Grid.Column="1"
                        IsToggled="{Binding IsDarkModeEnabled}" />
                </Grid>
            </Border>

            <!-- Automatic Theme switch -->
            <Border
                Grid.ColumnSpan="2"
                Grid.Row="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Grid ColumnDefinitions="*, auto">
                    <Label
                        Text="Automatisch Thema"
                        FontSize="18"
                        VerticalTextAlignment="Center"/>
                    <Switch
                        Grid.Column="1"
                        IsToggled="{Binding IsAutomaticThemeEnabled}" />
                </Grid>
            </Border>

            <!-- Push Notifications -->
            <Border
                Grid.ColumnSpan="2"
                Grid.Row="2">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Grid ColumnDefinitions="*, auto">
                    <Label
                        Text="Push berichten"
                        FontSize="18"
                        VerticalTextAlignment="Center"/>
                    <Switch
                        Grid.Column="1"
                        IsToggled="{Binding IsPushNotificationsEnabled}" />
                </Grid>
            </Border>

            <!-- Face-ID Login -->
            <Border
                Grid.ColumnSpan="2"
                Grid.Row="3">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Grid ColumnDefinitions="*, auto">
                    <Label
                        Text="Face-ID inlog"
                        FontSize="18"
                        VerticalTextAlignment="Center"/>
                    <Switch
                        Grid.Column="1"
                        IsToggled="false" />
                </Grid>
            </Border>
        </Grid>

        <Button Text="Open database viewer" Clicked="OpenDbViewer"/>

    </VerticalStackLayout>
</ContentPage>