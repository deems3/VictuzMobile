<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:VictuzMobile.App.ViewModels"
             x:Class="VictuzMobile.App.Views.MainPageView"
             x:DataType="vm:MainPageViewModel">

    <Grid RowDefinitions="auto, auto, auto, *, auto" ColumnDefinitions="*">

        <!-- Activities in grid -->
        <Grid Grid.Row="0" RowDefinitions="auto, auto" ColumnDefinitions="*, *">
            <Border 
                Margin="5" 
                Grid.Row="0" 
                Grid.ColumnSpan="2" 
                Stroke="#0F8390" 
                StrokeThickness="2">
                <ImageButton 
                    x:Name="firstActivity" 
                    Source="test.png"
                    MinimumHeightRequest="100" 
                    MinimumWidthRequest="100" 
                    Aspect="AspectFill"/>
            </Border>

            <Border 
                Margin="5" 
                Grid.Row="1" 
                Grid.Column="0" 
                Stroke="#0F8390" 
                StrokeThickness="2">
                <ImageButton 
                    x:Name="secondActivity" 
                    Source="test_twee.png"
                    MinimumHeightRequest="100"
                    MinimumWidthRequest="100" 
                    Aspect="AspectFill"/>
            </Border>

            <Border 
                Margin="5" 
                Grid.Row="1" 
                Grid.Column="1" 
                Stroke="#0F8390" 
                StrokeThickness="2">
                <ImageButton 
                    x:Name="thirdActivity" 
                    Source="test_drie.png"
                    MinimumHeightRequest="100"
                    MinimumWidthRequest="100" 
                    Aspect="AspectFill"/>
            </Border>
        </Grid>

        <!-- Divider -->
        <Border 
            Grid.Row="1" 
            Stroke="#0F8390"
            StrokeThickness="1.5"
            Margin="15,10"/>

        <!-- Scroll Mededeling(en?) -->
        <ScrollView Grid.Row="2">
            <VerticalStackLayout Padding="10">
                <Label FontSize="Large" 
                       FontAttributes="Bold" 
                       Text="Titel medeling"/>
                <Label FontSize="Small" 
                       Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut arbeid en dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Dit is een zeer pijnlijke beschuldiging van een voluptate velit esse cillum dolore eu fugiat nulla pariatur. De uitzondering is dat hij af en toe een niet-prodent is, maar schuldig is aan het verlaten van de taak."/>
            </VerticalStackLayout>
        </ScrollView>


        <!-- Fun Fact api-->

        <VerticalStackLayout 
            Grid.Row="3" 
            VerticalOptions="EndAndExpand" 
            Padding="0,10">
            
            <Border 
            Grid.Row="1" 
            Stroke="#0F8390"
            StrokeThickness="1.5"
            Margin="15,5"/>
            
            <Label 
                HorizontalOptions="Center"
                FontAttributes="Bold" 
                Text="Random fun fact:"/>
            <Label 
                Margin="0,0,0,20"
                x:Name="FactLabel" 
                FontAttributes="Italic"
                Text="{Binding Fact}"
                HorizontalOptions="Center"/>
        </VerticalStackLayout>

    </Grid>

</ContentPage>
