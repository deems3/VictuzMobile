<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VictuzMobile.App.Views.ManageActivityView"
             Title="Manage Activity">
    <VerticalStackLayout>
        <Border Stroke ="Black"
                StrokeThickness="1">
            <Image Source="victuz.png" /> <!--  Placeholder for now, will become a QR-code scanner -->
        </Border>

        <Button x:Name="EditActivityBtn" Text="Aanpassen" Command="{Binding EditActivityCommand}" />
        <Button x:Name="RegistrationListBtn" Text="Deelnemers" Command="{Binding RegistrationListCommand}" />
        <Button x:Name="SendMessageBtn" Text="Push Bericht" Command="{Binding SendMessageCommand}"/>
        <Button x:Name="QRScanBtn" Text="QR Scan" Command="{Binding ScanQRCodeCommand}"/>
    </VerticalStackLayout>
</ContentPage>