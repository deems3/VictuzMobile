<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="VictuzMobile.App.Views.ProfileView"
             Title="Jouw profiel">

    <ScrollView>
        <VerticalStackLayout>
            <toolkit:AvatarView 
                Text="PFP"
                HorizontalOptions="Center"
                VerticalOptions="Start"
                HeightRequest="250"
                WidthRequest="250"
                Margin="0,5,0,0"
                BackgroundColor="Black"
                BorderColor="#D6B17D"
                BorderWidth="7"
                CornerRadius="1000"
                ImageSource="placeholderpfp.png"
            />

            <Button
              x:Name="QRButton"
              Clicked="QRButton_Clicked"
              ImageSource="qr_code_icon"
              HorizontalOptions="Center"
              CornerRadius="20"
              WidthRequest="80"
              Margin="0,20,0,0"
            />

            <Grid ColumnDefinitions="*,Auto" WidthRequest="300">
                <Label x:Name="VoornaamLabel" Text="{Binding User.Username}" TextColor="Black" VerticalOptions="Center"/>
                <Entry x:Name="VoornaamEntry" Placeholder="User naam" IsVisible="False" WidthRequest="200"/>
                <Button Text=":pencil2:" Clicked="ToggleVoornaam" Grid.Column="1" HorizontalOptions="End"/>
            </Grid>


            <Grid ColumnDefinitions="*,Auto" WidthRequest="300">
                <Label x:Name="AchternaamLabel" Text="{Binding User.DisplayName}" TextColor="Black" VerticalOptions="Center"/>
                <Entry x:Name="AchternaamEntry" Placeholder="Display naam" IsVisible="False" WidthRequest="200"/>
                <Button Text=":pencil2:" Clicked="ToggleAchternaam" Grid.Column="1" HorizontalOptions="End"/>
            </Grid>

            <Grid ColumnDefinitions="*,Auto" WidthRequest="300">
                <Label x:Name="EmailLabel" Text="{Binding User.Email}" TextColor="Black" VerticalOptions="Center"/>
                <Entry x:Name="EmailEntry" Placeholder="E-mail adres" IsVisible="False" WidthRequest="200"/>
                <Button Text=":pencil2:" Clicked="ToggleEmail" Grid.Column="1" HorizontalOptions="End"/>
            </Grid>

            <Button HorizontalOptions="Center" WidthRequest="300" CornerRadius="20" Margin="0,40,0,5" Text="Bekijk voorgestelde activiteiten"/>
            <Button HorizontalOptions="Center" WidthRequest="225" CornerRadius="20" Margin="0,5,0,5" Text="Wachtwoord resetten"/>

            <Button Clicked="OnDeletion_Clicked"
                HorizontalOptions="Center"
                BackgroundColor="#FF6B6B"
                WidthRequest="225"
                CornerRadius="20"
                Margin="0,5,0,5"
                Text="Account verwijderen"/>

            <Button Clicked="LogoutBtn_Clicked"
                HorizontalOptions="Center"
                BackgroundColor="#FF6B6B"
                WidthRequest="225"
                CornerRadius="20"
                Margin="0,5,0,5"
                Text="Uitloggen"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
