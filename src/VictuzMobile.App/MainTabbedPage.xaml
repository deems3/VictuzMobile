<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
            xmlns:views="clr-namespace:VictuzMobile.App.Views"
            android:TabbedPage.ToolbarPlacement="Bottom"
            android:TabbedPage.IsSwipePagingEnabled="False"
            x:Class="VictuzMobile.MainTabbedPage">
    
    
    <NavigationPage Title="Home"
                    IconImageSource="home.svg">
        <x:Arguments>
            <views:MainPageView />
        </x:Arguments>
    </NavigationPage>

    <NavigationPage Title="Activities"
                IconImageSource="activities.svg">
        <x:Arguments>
            <views:ActivitiesView />
        </x:Arguments>
    </NavigationPage>

    <NavigationPage Title="Profile"
                IconImageSource="profile.svg">
        <x:Arguments>
            <views:ProfileView />
        </x:Arguments>
    </NavigationPage>

    <NavigationPage Title="Settings"
                IconImageSource="settings.svg">
        <x:Arguments>
            <views:SettingsView />
        </x:Arguments>
    </NavigationPage>

</TabbedPage>