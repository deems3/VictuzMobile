<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VictuzMobile.App.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Image
                Source="victuz.png"
                HeightRequest="250"
                WidthRequest="250"/>

            <StackLayout
                x:Name="HomeView"
                IsVisible="false">
            </StackLayout>

            <Entry IsPassword="False" Text="{Binding Username}" x:Name="UsernameInput" Placeholder="Username" />
            <Entry IsPassword="True" Text="{Binding Password}" x:Name="PasswordInput" Placeholder="Password"/>
            <Button
                x:Name="LoginButton"
                Text="Login"
                Clicked="LoginUsernamePassword"/>
            
			<Grid 
	            ColumnDefinitions="*,Auto,*"
	            VerticalOptions="Center"
	            HorizontalOptions="Fill"
	            Margin="10">

				<BoxView 
		            Grid.Column="0"
		            HeightRequest="1"
		            VerticalOptions="Center"
		            BackgroundColor="Gray" />


				<Label 
		            Grid.Column="1"
		            Text="OR"
		            FontSize="14"
		            TextColor="Gray"
		            VerticalOptions="Center"
		            HorizontalOptions="Center"
		            Margin="10,0" />

				<BoxView 
		            Grid.Column="2"
		            HeightRequest="1"
		            VerticalOptions="Center"
		            BackgroundColor="Gray" />
			</Grid>

            <StackLayout
                x:Name="LoginView">
                <Button 
                    x:Name="LoginBtn"
                    Text="Log in with a different provider"
                    SemanticProperties.Hint="Click to log in"
                    Clicked="OnLoginClicked"/>
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
